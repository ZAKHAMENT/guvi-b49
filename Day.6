  class UberPriceCalculator {
    constructor(basePrice, costPerKilometer) {
      this.basePrice = basePrice;
      this.costPerKilometer = costPerKilometer;
    }
  
    calculatePrice(distanceInKilometers) {
      const totalFee = this.basePrice + this.costPerKilometer * distanceInKilometers;
      return totalFee.toFixed(2);
    }
  }
  
  const priceCalculator = new UberPriceCalculator(5, 2);
  const fee = priceCalculator.calculatePrice(10);
